{
    "manifest_version": 3,
    "name": "Party Line",
    "description": "A browser extension that integrates live chat into Discuit.",
    "version": "0.1.2",
    "content_scripts": [
        {
            "matches": [
                "https://*.discuit.net/*"
            ],
            "js": [
                "main.js"
            ]
        },
        {
            "matches": [
                "http://localhost/*"
            ],
            "js": [
                "chat.js"
            ],
            "css": [
                "chat.css"
            ]
        }
    ],
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
        "cookies"
    ],
    "host_permissions": [
        "https://*.discuit.net/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}