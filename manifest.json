{
    "manifest_version": 2,
    "name": "Discuit Chat",
    "description": "Adds a Party Line to Discuit",
    "version": "0.1.0",
    "content_scripts": [{
        "matches": [
            "https://*.discuit.net/*",
            "https://*.discuitchat.net/*",
            "http://localhost/*"
        ],
        "js": [
            "browser-polyfill.min.js",
            "index.js"
        ],
        "css": [
            "index.css"
        ]
    }],
    "icons": {
        "48": "icon.png",
        "96": "icon.png"
    },
    "permissions": [
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "browser-polyfill.min.js",
            "background.js"
        ]
    }
}